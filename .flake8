[flake8]
# Exclude directories you don't want to lint
exclude =
    .git,
    __pycache__,
    venv,
    migrations

# Set line length and complexity
max-line-length = 88
max-complexity = 10

# List of errors to ignore. W503 and E203 are often ignored when using Black.
# E501 (line too long) is handled by Black, so it's good to ignore.
ignore = E203, E501, W503